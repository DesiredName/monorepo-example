{
    "plugins": ["@typescript-eslint/eslint-plugin"],
    "extends": ["plugin:@typescript-eslint/recommended"],
    "root": true,
    "ignorePatterns": ["node_modules", "dist"],
    "rules": {
        "@typescript-eslint/no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_",
                "caughtErrorsIgnorePattern": "^_"
            }
        ]
    }
}
